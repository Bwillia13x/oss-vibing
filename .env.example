# Vibe University Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# Application
# ============================================================================
NEXT_PUBLIC_URL=http://localhost:3000

# ============================================================================
# Database
# ============================================================================
DATABASE_URL="file:./prisma/dev.db"

# ============================================================================
# Authentication
# ============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# ============================================================================
# Email Services (Choose one)
# ============================================================================
# SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@vibeuniversity.edu

# AWS SES (Alternative)
# AWS_SES_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_SES_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@vibeuniversity.edu

# ============================================================================
# LMS Integrations
# ============================================================================
# Canvas LMS (Already configured - see existing setup)
CANVAS_API_URL=https://canvas.instructure.com
CANVAS_API_TOKEN=your_canvas_api_token

# Blackboard Learn
BLACKBOARD_BASE_URL=https://your-institution.blackboard.com
BLACKBOARD_APPLICATION_ID=your_application_id
BLACKBOARD_APPLICATION_KEY=your_application_key
BLACKBOARD_LEARN_URL=https://your-institution.blackboard.com

# Moodle
MOODLE_BASE_URL=https://your-institution.moodle.com
MOODLE_TOKEN=your_moodle_web_service_token

# ============================================================================
# Research Integrations
# ============================================================================
# Serpapi for Google Scholar (Optional - falls back to mock data)
NEXT_PUBLIC_SERPAPI_KEY=your_serpapi_key

# CrossRef API (Optional - free, no key required for basic use)
CROSSREF_EMAIL=your_email@institution.edu

# OpenAlex API (Optional - free, no key required)
OPENALEX_EMAIL=your_email@institution.edu

# Semantic Scholar API (Optional - higher rate limits with key)
# SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key

# ============================================================================
# PDF Processing (Phase 13)
# ============================================================================
# GROBID service URL (defaults to http://localhost:8070/api)
GROBID_URL=http://localhost:8070/api

# ============================================================================
# Redis Cache (Optional - for production)
# ============================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ============================================================================
# Encryption (Phase 14 - FERPA Compliance)
# ============================================================================
# 32-byte encryption key (generate with: openssl rand -hex 32)
# ENCRYPTION_KEY=your_64_character_hex_string_here

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Sentry (Optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# SENTRY_AUTH_TOKEN=your_sentry_auth_token
# SENTRY_ORG=your_sentry_org
# SENTRY_PROJECT=your_sentry_project

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable features
ENABLE_GOOGLE_SCHOLAR=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FERPA_MODE=false

# ============================================================================
# Institution Settings
# ============================================================================
# Default institution for demo/development
DEFAULT_INSTITUTION_ID=inst_demo
INSTITUTION_NAME=Demo University
